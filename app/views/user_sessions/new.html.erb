<%- title "LOGIN" -%>
<%- content_for :head do -%>
    <%= javascript_include_tag "jquery.js" %>
    <script type="text/javascript">
        $(window).ready(function(){
            $(':input:not(:hidden):first').focus()
        })
    </script>
<%- end -%>
<% form_for @user_session do |f| %>
  <%= f.error_messages %>
      <p>
    <%= f.label :login %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit :login %></p>
<% end %>

