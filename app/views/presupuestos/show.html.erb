<% title "Presupuesto" %>

<p>
  <strong>Nombre Paciente:</strong> <%=h @presupuesto.paciente.nombre_completo%> <br />
  <strong>Telefono:</strong>  <%=h @presupuesto.paciente.fono_fijo %> <br />
  <strong>Celular:</strong>  <%=h @presupuesto.paciente.celular %><br />
  <strong>Ejecutiva:</strong> <%= h @presupuesto.user.nombre_completo %>
</p>

<h2>Seguimiento</h2>
<div id='seguimiento'>
  <%= render :partial => @presupuesto.seguimientos %>
</div>

<hr />
<% form_for [@presupuesto, Seguimiento.new] do |f| %>
  <p>
    <%= f.label :comentario, "Nuevo Seguimiento"%> <br />
    <%= f.text_area :comentario, :rows => 5%>
  </p>
  <p> <%= f.submit "Nuevo Seguimiento"%> </p>
<%end%> 
