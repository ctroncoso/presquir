
<%content_for :head do %>
    <%= stylesheet_link_tag 'autocomplete.css'%>
    <%= javascript_include_tag :defaults %>
    <%= calendar_date_select_includes :style => 'orange', :locale=> 'es'%>
<% end %>

<a href="#" onclick="$$('.opened_link').each(function(i) {i.show()}); $$('.closed_link').each(function(i) {i.hide()});">Abrir todo</a>
<a href="#" onclick="$$('.opened_link').each(function(i) {i.hide()}); $$('.closed_link').each(function(i) {i.show()});">Ocultar todo</a>

<% form_for @presupuesto do |f| %>
  <%= f.error_messages %>
    <%= render "form_general", :f => f %>
    <%= render "form_paciente" , :f => f %>
  <p><%= f.submit %></p>
<% end %>

